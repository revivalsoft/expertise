<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>
			{% block title %}Mon appli Symfony
			{% endblock %}
		</title>

		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"> {% block stylesheets %}{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

		<style>
			#resultChart {
				max-height: 300px;
			}


			@media print {
				.no-print,
				nav,
				footer,
				input[type="submit"],
				input[type="button"] {
					display: none !important;
				}

				canvas {
					max-width: 100%;
					max-height: 400px;
				}

				/* Ajouter un symbole de coche sur les cases cochées */
				input[type="checkbox"]:checked::after {
					content: "✔";
					display: inline-block;
					color: black;
					font-size: 1em;
					position: relative;
					left: -0.2em;
				}

			}
		</style>
	</head>

	<body>

		<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
			<div class="container">
				<a class="navbar-brand" href="{{ path('app_accueil') }}">Estimation Terrain</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav ms-auto">
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_accueil') }}">Accueil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_guide') }}">Guide</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('iqr_analysis') }}">Iqr</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('csv_upload') }}">Analyse</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>

		{% for label, messages in app.flashes %}
			{% for message in messages %}
				<div class="alert alert-{{ label }} mt-3 container">{{ message }}</div>
			{% endfor %}
		{% endfor %}

		<div class="container"> {% block body %}{% endblock %}
			</div>

			<footer class="text-center text-muted mt-5 mb-3">
				<hr>
				&copy;
				{{ "now"|date("Y") }}
				<a href="https://www.revivalsoft.fr" class="text-decoration-none text-muted" target="_blank">Revivalsoft.fr</a>
			</footer>

			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
			{% block javascripts %}{% endblock %}
		</body>
	</html>
</head></html>
