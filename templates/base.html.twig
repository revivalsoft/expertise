<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Mon appli Symfony
			{% endblock %}
		</title>

		<link rel="icon" href="favicon.ico">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="..." crossorigin="anonymous"> {% block stylesheets %}{% endblock %}
		</head>
		<body>

			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ label }} mt-3 container">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}

			<div class="container"> {% block body %}{% endblock %}
				</div>

				<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="..." crossorigin="anonymous"></script>
				{% block javascripts %}{% endblock %}
			</body>
		</html>
